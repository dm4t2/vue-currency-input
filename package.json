{
  "name": "vue-currency-input",
  "description": "Easy input of currency formatted numbers for Vue.js.",
  "version": "3.0.0",
  "license": "MIT",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "sideeffects": false,
  "author": "Matthias Stiller",
  "repository": {
    "type": "git",
    "url": "https://github.com/dm4t2/vue-currency-input.git"
  },
  "homepage": "https://dm4t2.github.io/vue-currency-input",
  "keywords": [
    "vue",
    "composition api",
    "composable",
    "input mask",
    "currency input",
    "money input",
    "number format",
    "ECMA-402"
  ],
  "scripts": {
    "dev": "vitepress dev docs",
    "docs": "vitepress build docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint --no-fix --max-warnings 0 {**/*,*}.{js,ts,vue}",
    "prebuild": "rimraf dist",
    "build": "tsc --emitDeclarationOnly --declaration --outDir dist/types && rollup -c rollup.config.js",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "vue": "^2.7 || ^3.0.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.3",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/user-event": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitest/coverage-c8": "^0.22.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.31.1",
    "semantic-release": "^19.0.2",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.4",
    "unplugin-vue-components": "^0.17.20",
    "vite-plugin-windicss": "^1.7.1",
    "vitepress": "^0.22.3",
    "vitest": "^0.22.1",
    "vue": "^3.2.26",
    "windicss": "^3.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{**/*,*}.{js,ts,vue}": [
      "eslint --fix"
    ]
  }
}
