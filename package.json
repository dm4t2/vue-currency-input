{
  "name": "vue-currency-input",
  "description": "Easy input of currency formatted numbers for Vue.js.",
  "version": "2.3.0",
  "license": "MIT",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "sideeffects": false,
  "author": "Matthias Stiller",
  "repository": {
    "type": "git",
    "url": "https://github.com/dm4t2/vue-currency-input.git"
  },
  "homepage": "https://dm4t2.github.io/vue-currency-input",
  "keywords": [
    "vue",
    "composition api",
    "composable",
    "input mask",
    "currency input",
    "money input",
    "number format",
    "ECMA-402"
  ],
  "scripts": {
    "dev": "vitepress dev docs",
    "docs": "vitepress build docs",
    "test": "jest",
    "lint": "eslint --no-fix --max-warnings 0 {**/*,*}.{js,ts} && prettier --check {**/*,*}.{js,ts,json,md}",
    "lint:fix": "eslint --fix {**/*,*}.{js,ts} && prettier --write {**/*,*}.{js,ts,json,md}",
    "prebuild": "rimraf dist",
    "build": "tsc --emitDeclarationOnly --declaration --outDir dist/types && rollup -c rollup.config.js"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0",
    "vue": "^2.6 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^8.2.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@vue/composition-api": "^1.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.17",
    "@vueuse/core": "^7.1.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "lint-staged": "^12.1.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.32.13",
    "simple-git-hooks": "^2.7.0",
    "stringify-object": "^3.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "vite-plugin-components": "^0.8.4",
    "vite-plugin-windicss": "^0.15.10",
    "vitepress": "^0.19.2",
    "vue": "^3.2.22",
    "vue-jest": "^5.0.0-alpha.10",
    "windicss": "^2.5.14"
  },
  "dependencies": {
    "vue-demi": "^0.12.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{**/*,*}.{js,ts}": [
      "eslint --fix"
    ],
    "{**/*,*}.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
